print('Done by Vera')
import numpy as np
x = np.arange(0,50)
y = x*2
z = x**2

import matplotlib.pyplot as plt
%matplotlib inline 
print('Done by Vera')


1b

print('Done by Vera')
fig = plt.figure()
axes1 = fig.add_axes([0,0,0.8,0.8])
axes1.plot(x,y)
axes1.set_xlabel('X values')  
axes1.set_ylabel('Y values')
axes1.set_title('X vs Y')
fig


